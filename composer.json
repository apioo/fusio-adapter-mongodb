{
  "name": "fusio/adapter-mongodb",
  "description": "Adapter which helps to work with a MongoDB",
  "homepage": "http://fusio-project.org",
  "keywords": ["fusio-adapter"],
  "license": "MIT",
  "authors": [
    {
      "name": "Christoph Kappestein",
      "email": "christoph.kappestein@gmail.com",
      "homepage": "http://christoph.kappestein.com"
    }
  ],
  "require": {
    "php": ">=7",
    "fusio/engine": "^0.4@dev",
    "mongodb/mongodb": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.1",
    "phpunit/dbunit": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Fusio\\Adapter\\Mongodb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fusio\\Adapter\\Mongodb\\Tests\\": "tests/"
    }
  }
