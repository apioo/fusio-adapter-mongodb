{
  "name": "fusio/adapter-mongodb",
  "description": "Provides a connection to work with a MongoDB",
  "homepage": "https://www.fusio-project.org",
  "keywords": ["fusio-adapter"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Christoph Kappestein",
      "email": "christoph.kappestein@gmail.com",
      "homepage": "https://chrisk.app"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-mongodb": "*",
    "fusio/engine": "^6.0",
    "mongodb/mongodb": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Fusio\\Adapter\\Mongodb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fusio\\Adapter\\Mongodb\\Tests\\": "tests/"
    }
  }
}
